{
  "name": "back",
  "description": "todo app",
  "version": "0.0.0",
  "homepage": "",
  "private": true,
  "keywords": [
    "feathers"
  ],
  "author": {},
  "contributors": [],
  "bugs": {},
  "engines": {
    "node": ">= 22.17.0"
  },
  "feathers": {
    "language": "ts",
    "packager": "npm",
    "database": "mongodb",
    "framework": "koa",
    "transports": [
      "rest",
      "websockets"
    ],
    "schema": "typebox"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "files": [
    "lib/client.js",
    "lib/**/*.d.ts",
    "lib/**/*.shared.js"
  ],
  "main": "lib/client",
  "scripts": {
    "dev": "nodemon -x ts-node src/index.ts",
    "compile": "shx rm -rf lib/ && tsc",
    "start": "node lib/",
    "prettier": "npx prettier \"**/*.ts\" --write",
    "mocha": "cross-env NODE_ENV=test mocha test/ --require ts-node/register --recursive --extension .ts --exit",
    "test": "npm run mocha",
    "bundle:client": "npm run compile && npm pack --pack-destination ./public"
  },
  "dependencies": {
    "@feathersjs/adapter-commons": "^5.0.35",
    "@feathersjs/authentication": "^5.0.35",
    "@feathersjs/authentication-client": "^5.0.35",
    "@feathersjs/authentication-local": "^5.0.35",
    "@feathersjs/authentication-oauth": "^5.0.35",
    "@feathersjs/configuration": "^5.0.35",
    "@feathersjs/errors": "^5.0.35",
    "@feathersjs/feathers": "^5.0.35",
    "@feathersjs/koa": "^5.0.35",
    "@feathersjs/mongodb": "^5.0.35",
    "@feathersjs/schema": "^5.0.35",
    "@feathersjs/socketio": "^5.0.35",
    "@feathersjs/transport-commons": "^5.0.35",
    "@feathersjs/typebox": "^5.0.35",
    "firebase-admin": "^13.5.0",
    "mongodb": "^6.19.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@feathersjs/cli": "^5.0.35",
    "@feathersjs/rest-client": "^5.0.35",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.1",
    "axios": "^1.11.0",
    "cross-env": "^10.0.0",
    "mocha": "^11.7.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
